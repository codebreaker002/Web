    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Assignment </title>
    <script>
        window.onload = function () {
            let slide = document.querySelector(".toggler");
            let bck = document.getElementById("bckbtn");
            let fwd = document.getElementById("fwdbtn");
            slide.addEventListener("wheel", (evt) => {
                evt.preventDefault(); slide.scrollLeft += evt.deltaY;
            });
            fwd.addEventListener("click", () => { slide.scrollLeft += 900; });
            bck.addEventListener("click", () => { slide.scrollLeft -= 900; });
        };
    </script>
    <style>
      *{
    margin:0px;
    padding: 0px;
    box-sizing: border-box;
}
nav{
    width: 100%;
    height: 85px;
    line-height: 75px;
    padding: 10px 50px;
    position: fixed;
    background-image: linear-gradient(#033747,#012733);
}
nav .logo p{
    font-size: 30px;
    font-weight: bold;
    float: left;
    color: white;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    cursor: pointer;
} 
nav ul{
    float: right;
}
nav li{
    display: inline-block;
    list-style: none;
    /* padding: 20px 0px; */
}
nav li a{
    font-size: 18px;
    text-transform: uppercase;
    padding: 0px 30px;
    color: white;
    text-decoration: none;
}
.toggler {
    width: 900px;
    display: flex;
    overflow-x: scroll;
    /* padding-left: 50px; */
}
.toggler div{
    width: 100%;
    display: grid;
    grid-template-columns: auto auto auto;
    grid-gap: 20px;
    padding: 10px;
    padding-right: 10px;
    flex: none;
}
.toggler div img{
    width: 100%;
    filter: grayscale(100);
    transition: transform 0.5s;
}
.toggler::-webkit-scrollbar{
    display: none;
}
.toggler-wrapper{
    padding-top: 150px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0% 100px;
}
#bckbtn, #fwdbtn{
    width: 50px;
    cursor: pointer;
    margin: 40px;
}
.toggler div img:hover{
    filter: grayscale(0);
    cursor: pointer;
    transform: scale(1.1);
}

    </style>

</head>

